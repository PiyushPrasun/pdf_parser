{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Set up and run PDF Parser",
			"type": "shell",
			"command": "pip install -r requirements.txt && echo 'PDF Parser is ready to use. Run with: python main.py <path_to_pdf_file>'",
			"group": "build",
			"problemMatcher": []
		},
		{
			"label": "Build Docker Image for Azure",
			"type": "shell",
			"command": "docker",
			"args": [
				"build",
				"-t",
				"pdf-parser:latest",
				"."
			],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": []
		},
		{
			"label": "Run Docker Container Locally",
			"type": "shell",
			"command": "docker",
			"args": [
				"run",
				"-p",
				"5000:5000",
				"-e",
				"SECRET_KEY=dev-secret-key",
				"pdf-parser:latest"
			],
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": []
		},        {
            "label": "Deploy to Azure Container Apps (VS Code)",
            "type": "shell",
            "command": "echo",
            "args": [
                "Use Azure Container Apps extension: Ctrl+Shift+P → 'Azure Container Apps: Create Container App'"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Deploy to Azure App Service (VS Code)",
            "type": "shell",
            "command": "echo",
            "args": [
                "Right-click workspace folder → 'Deploy to Web App' or use Ctrl+Shift+P → 'Azure App Service: Deploy to Web App'"
            ],
            "group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			}
		}
	]
}